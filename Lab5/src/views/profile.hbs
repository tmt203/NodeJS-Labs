<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-5 col-lg-4">
            <div class="card" class="w-100">
                <img class="card-img-top" src="https://www.w3schools.com/bootstrap4/img_avatar1.png" alt="Card image">
                {{#with user}}
                <div class="card-body">
                    <h4 class="card-title text-primary">{{name}}</h4>
                    <p class="card-text">Gender: <strong>{{gender}}</strong></p>
                    <p class="card-text">Email: <strong>{{email}}</strong></p>
                    <a href="#" class="btn btn-primary">Liên hệ</a>
                </div>
                {{/with}}
            </div>
            <p class="mt-3"><a href="/">Quay lại</a></p>
        </div>
    </div>
</div>